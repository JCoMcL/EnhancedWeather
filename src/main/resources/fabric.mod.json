    "authors": [
        "TalonFox"
    ],
    "contact": {
        "sources": "https://github.com/TalonFox/EnhancedWeather",
        "homepage": "https://github.com/TalonFox/EnhancedWeather",
        "issues": "https://github.com/TalonFox/EnhancedWeather/issues"
    },
    "license": "LGPL-3.0",
    "icon": "assets/enhancedweather/icon.png",
