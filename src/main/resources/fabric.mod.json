    "entrypoints": {
        "client": [
            "sh.talonfox.enhancedweather.client.EnhancedWeatherClient"
        ],
        "main": [
            "sh.talonfox.enhancedweather.EnhancedWeather"
        ],
        "modmenu": [
            "sh.talonfox.enhancedweather.common.config.ModMenuIntegration"
        ],
        "journeymap": [
            "sh.talonfox.enhancedweather.externmods.journeymap.EnhancedWeatherJMPlugin"
